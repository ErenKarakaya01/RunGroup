@model IEnumerable<Club>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Club</h1>

<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var club in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="@club.Image" alt="image" class="bd-placeholder-img card-img-top" width="100%" height="225" />
                        <div class="card-body">
                            <p class="card-text">@club.Title</p>
                            <p class="card-text">@club.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" class="btn btn-secondary mb-1" asp-controller="Club" asp-action="Detail" asp-route-id="@club.Id">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <div>
                                            <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Club" asp-action="Edit" asp-route-id="@club.Id">
                                                Edit
                                            </a>
                                            <a type="button" class="btn btn-sm btn-outline-danger" asp-controller="Club" asp-action="Delete" asp-route-id="@club.Id">
                                                Delete
                                            </a>
                                        </div>
                                    }
                                </div>
                                <small class="text-body-secondary">@club.ClubCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
